#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    void mergeArrays(vector<int>& arr1, vector<int>& arr2) {
        int n = arr1.size();
        int m = arr2.size();

        int i = n - 1, j = 0;

        while (i >= 0 && j < m) {
            if (arr1[i] > arr2[j]) {
                swap(arr1[i], arr2[j]);
            }
            i--; j++;
        }

        sort(arr1.begin(), arr1.end());
        sort(arr2.begin(), arr2.end());
    }
};

vector<int> parseArrayInput(string s) {
    vector<int> arr;
    string num = "";

    for (char c : s) {
        if (isdigit(c) || c == '-') {
            num += c;
        } else {
            if (!num.empty()) {
                arr.push_back(stoi(num));
                num = "";
            }
        }
    }
    if (!num.empty()) arr.push_back(stoi(num));

    return arr;
}

int main() {
    Solution sol;

    string line1, line2;
    cout << "Enter arr1: ";
    getline(cin, line1);
    cout << "Enter arr2: ";
    getline(cin, line2);

    vector<int> arr1 = parseArrayInput(line1);
    vector<int> arr2 = parseArrayInput(line2);

    sol.mergeArrays(arr1, arr2);

    cout << "arr1 = [ ";
    for (int x : arr1) cout << x << " ";
    cout << "]\n";

    cout << "arr2 = [ ";
    for (int x : arr2) cout << x << " ";
    cout << "]\n";

    return 0;
}

/*
Input:
Enter arr1: [1, 3, 5, 7]
Enter arr2: [2, 4, 6, 8]
Output:
arr1 = [ 1 2 3 4 ]
arr2 = [ 5 6 7 8 ]
*/
